<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/height_320"
    android:background="@drawable/layout_rounded_product_favorit">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_300"
        android:src="@drawable/no_image"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:padding="@dimen/padding_5"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/layout_rounded"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/txtTimeLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/font_36"/>

        <TextView
            android:id="@+id/txtKetTimeLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorWhite"
            android:text="Days Left"
            android:padding="@dimen/padding_5"
            android:textSize="@dimen/font_12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/bgColor"
        android:layout_margin="@dimen/margin_5"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.99"
            android:text="Hot Promo Buy 1 Get 1 Free"
            android:textColor="@color/textColor"
            android:textSize="@dimen/font_14"
            android:padding="@dimen/padding_10"/>

        <ImageView
            android:id="@+id/imgNavigate"
            android:layout_width="@dimen/width_40"
            android:layout_height="@dimen/height_40"
            android:padding="@dimen/padding_10"
            android:src="@drawable/ic_navigation"/>

        <ImageView
            android:id="@+id/imgshare"
            android:layout_width="@dimen/width_40"
            android:layout_height="@dimen/height_40"
            android:padding="@dimen/padding_10"
            android:src="@drawable/ic_share"/>

    </LinearLayout>
</RelativeLayout>