<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="@dimen/width_150"
        android:layout_height="@dimen/height_150"
        android:src="@drawable/no_image"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        app:siBorderWidth="0dp"
        app:siBorderColor="@color/colorWhite"
        app:siSquare="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginRight="@dimen/margin_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginRight="@dimen/margin_15">

                <ImageView
                    android:id="@+id/imgReview"
                    android:layout_width="@dimen/width_35"
                    android:layout_height="@dimen/height_35"
                    android:src="@drawable/ic_edit"
                    android:padding="@dimen/padding_5"
                    android:layout_marginRight="@dimen/margin_5"/>

                <TextView
                    android:id="@+id/txtJlhReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_35"
                    android:padding="@dimen/padding_5"
                    android:text="1500"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/font_18"
                    android:gravity="center|right"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtKetReview"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_35"
                android:layout_marginTop="@dimen/margin_5"
                android:text="Reviews Wrote"
                android:textColor="@color/textColor"
                android:gravity="right"
                android:textSize="@dimen/font_16"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginLeft="@dimen/margin_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_marginRight="@dimen/margin_15">

                <ImageView
                    android:id="@+id/imgPromotions"
                    android:layout_width="@dimen/width_35"
                    android:layout_height="@dimen/height_35"
                    android:src="@drawable/ic_like"
                    android:padding="@dimen/padding_5"
                    android:layout_marginRight="@dimen/margin_5"/>

                <TextView
                    android:id="@+id/txtJlhPromotions"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_35"
                    android:text="1500"
                    android:textColor="@color/textColor"
                    android:gravity="center"
                    android:textSize="@dimen/font_18"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtKetPromotions"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_35"
                android:layout_marginTop="@dimen/margin_5"
                android:text="Promotions Liked"
                android:textColor="@color/textColor"
                android:gravity="left"
                android:textSize="@dimen/font_16"/>

        </LinearLayout>
        
    </LinearLayout>
    
    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="@dimen/font_16"
        android:textAllCaps="false"
        android:paddingLeft="@dimen/padding_40"
        android:paddingRight="@dimen/padding_40"
        android:textColor="@color/textColorWhite"
        android:background="@drawable/button_rounded_background"/>

    <ListView
        android:id="@+id/listProductPromotion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"/>
    
</LinearLayout>