<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_15"
    android:layout_marginRight="@dimen/margin_15"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_10"
    android:gravity="center"
    android:background="@color/bgColor"
    android:weightSum="1">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/imgProfileNotification"
        android:layout_width="@dimen/width_50"
        android:layout_height="@dimen/height_50"
        android:src="@drawable/no_image"
        android:padding="@dimen/padding_10"
        app:siBorderWidth="2dp"
        app:siBorderColor="@color/colorWhite"
        app:siSquare="true"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.99"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20">

        <TextView
            android:id="@+id/txtNameNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bilardo"
            android:textSize="@dimen/font_14"
            android:textColor="@color/textColor"/>

        <TextView
            android:id="@+id/txtDetailNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Messages you back"
            android:textSize="@dimen/font_14"
            android:textColor="@color/textColorGrayDarker"/>

        <TextView
            android:id="@+id/txtTimeNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 week ago"
            android:textSize="@dimen/font_11"
            android:textColor="@color/textColorGrayDarker"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgIconNotification"
        android:layout_width="@dimen/width_50"
        android:layout_height="@dimen/height_50"
        android:src="@drawable/ic_mail"
        android:padding="@dimen/padding_10"
        />

</LinearLayout>